<%= form_tag(post_path, method: "patch")%>
  <% @tags.each do |tag| %>
    <%= f.check_box_tag 'vaga[tag_ids][]',
    tag.id, (checked = true if form.object,tag_ids.include?(tag,id)) %>
    <%= f.label 'vaga[tag_ids][][#{tag.id}]', tag.name %> <br>
  <% end %>
    <%= f.submit('add tag') %>
<% end %>

