<h2><%=@tag.title%></h2>
<h3>posts with this tag:</h3>
<% if @post %>
<% @post.each do |post|  %>
  <ul>
  <%= link_to post.title, post_path(post) %>  
  </ul>
<% end %>
<% end %>
<hr>
<%= link_to 'delete tag', tag_path(@tag),
                    :data => {:confirm => "Are you sure?",
                            :method => "delete"} %>
